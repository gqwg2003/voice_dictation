<mah:MetroWindow 
    x:Class="VoiceDictation.UI.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:VoiceDictation.UI.Views"
    mc:Ignorable="d"
    Title="Настройки" 
    Height="600" 
    Width="800"
    WindowStartupLocation="CenterOwner"
    GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
    BorderThickness="1"
    TitleCharacterCasing="Normal"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType">
    
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <materialDesign:PackIcon Kind="Settings" Width="20" Height="20" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Loading overlay -->
        <Grid Grid.RowSpan="3" Background="#88000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock Text="Загрузка..." HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Tabs -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- API Settings Tab -->
            <TabItem Header="API">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Тип распознавания речи" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="Выберите систему распознавания речи" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableRecognizerTypes}"
                                  SelectedItem="{Binding SelectedRecognizerType}"
                                  Width="250"
                                  HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <Button Command="{Binding SwitchRecognizerCommand}" 
                                CommandParameter="{Binding SelectedRecognizerType}"
                                Style="{StaticResource MaterialDesignRaisedButton}" 
                                Content="Применить выбранный распознаватель" 
                                Margin="0,10,0,0"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="2" Text="Настройки API ключа" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>
                    
                    <StackPanel Grid.Row="3" Orientation="Vertical">
                        <TextBlock Text="Введите API ключ для распознавания речи" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="API ключ"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Width="400"
                                 HorizontalAlignment="Left"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Command="{Binding SaveApiKeyCommand}" 
                                    Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Content="Сохранить ключ" 
                                    Margin="0,0,10,0"/>
                            <Button Command="{Binding TestApiKeyCommand}" 
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Content="Тестировать ключ"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="4" Text="Информация о API" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,30,0,10"/>
                    
                    <TextBlock Grid.Row="5" Text="Для распознавания речи можно использовать Microsoft Azure Speech Service API. Получите ключ в личном кабинете Azure." 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                </Grid>
            </TabItem>
            
            <!-- Proxy Settings Tab -->
            <TabItem Header="Прокси">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Настройки прокси" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>
                    
                    <!-- Add new proxy -->
                    <Expander Grid.Row="1" Header="Добавить новый прокси" Margin="0,0,0,10">
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,5,10"
                                     Text="{Binding NewProxyName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Название"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            
                            <TextBox Grid.Row="0" Grid.Column="1" Margin="5,0,0,10"
                                     Text="{Binding NewProxyUrl, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="URL (http://proxy:port)"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="0,0,5,10"
                                     Text="{Binding NewProxyUsername, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Имя пользователя (опционально)"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            
                            <PasswordBox Grid.Row="1" Grid.Column="1" Margin="5,0,0,10"
                                         materialDesign:HintAssist.Hint="Пароль (опционально)"
                                         Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                         materialDesign:PasswordBoxAssist.Password="{Binding NewProxyPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Command="{Binding AddProxyCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}" 
                                        Content="Добавить" 
                                        Margin="0,0,10,0"/>
                                <Button Command="{Binding DetectSystemProxyCommand}" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}" 
                                        Content="Определить системный прокси"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    
                    <!-- Proxy list -->
                    <DataGrid Grid.Row="2" 
                              ItemsSource="{Binding Proxies}" 
                              SelectedItem="{Binding SelectedProxy}" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              materialDesign:DataGridAssist.CellPadding="8"
                              materialDesign:DataGridAssist.ColumnHeaderPadding="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="HTTP" Binding="{Binding HttpProxy}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Системный" Binding="{Binding IsSystemProxy}" ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}" EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}" Width="Auto"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Command="{Binding DataContext.SelectProxyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Выбрать">
                                                <materialDesign:PackIcon Kind="Check" />
                                            </Button>
                                            <Button Command="{Binding DataContext.TestProxyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Тестировать">
                                                <materialDesign:PackIcon Kind="TestTube" />
                                            </Button>
                                            <Button Command="{Binding DataContext.RemoveProxyCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}" 
                                                    ToolTip="Удалить">
                                                <materialDesign:PackIcon Kind="Delete" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <TextBlock Grid.Row="3" Text="Выбранный прокси будет использоваться для всех запросов API." TextWrapping="Wrap" Margin="0,10,0,0"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status bar -->
        <materialDesign:Card Grid.Row="2" Margin="10,0,10,10" Padding="5">
            <TextBlock Text="{Binding StatusMessage}" Margin="5" TextWrapping="Wrap"/>
        </materialDesign:Card>
    </Grid>
</mah:MetroWindow> 